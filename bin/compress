#!/bin/bash
# usage: compress FORMAT [ARCHIVE_FILE] FILE ...

declare -r format="$1"
shift 1
if [[ "$format" = "tar.gz" ]] || [[ "$format" = "tgz" ]] || [[ "$format" = "zip" ]]; then
  declare -r archive_file="$1"
  shift 1
fi

if [[ "$format" = "tar.gz" ]] || [[ "$format" = "tgz" ]]; then
  tar -zcvf "$archive_file" "$@"
elif [[ "$format" = "zip" ]]; then
  zip -r "$archive_file" "$@"
elif [[ "$format" = "gz" ]] || [[ "$format" = "gzip" ]]; then
  gzip "$@"
fi
